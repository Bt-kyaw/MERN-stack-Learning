

        <% if(blogs.length){ %>
            <% blogs.forEach(blog => { %>

                 <div class="blog-card">

                    <a href="/blogs/<%= blog._id %>">

                      <h1><%= blog.title %></h1>
                      <p> <%= blog.intro  %></p>
                      <form action="/blogs/<%= blog._id %>/delete" method="POST">
                        <button class="blog-delete-btn">Delete</button>
                      </form>
                      

                    </a>
                 </div>
                 
    
             <% }) %>
        <% } else { %>
               <h1>There is no blogs.</h1>
            <% } %>



   
</body>
</html>